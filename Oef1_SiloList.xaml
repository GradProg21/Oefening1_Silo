        <ProgressBar x:Name="pgbSilo2" HorizontalAlignment="Center" Height="40" VerticalAlignment="Top" Width="160" Margin="0,262,0,0" Maximum="0"/>
        <ProgressBar x:Name="pgbSilo3" HorizontalAlignment="Center" Height="40" Margin="0,397,0,0" VerticalAlignment="Top" Width="160" Maximum="0"/>
        <Button x:Name="btnClean" HorizontalAlignment="Center" VerticalAlignment="Top" Content="Silo's reinigen" Margin="10,21,630,483" Click="btnClean_Click" Visibility="Visible" Width="160" Height="30"/>
    </Grid>
